{
  "extends": "airbnb-base",
  "env": {
    "browser": true
  },
  "rules": {
    "indent": ["error", 2],
    "semi": "off",
    "no-extra-semi": "off",
    "comma-dangle": "off",
    "padded-blocks": "off",
    "space-before-function-paren": "off",
    "no-unused-expressions": ["error", { "allowShortCircuit": true }]
  }
}
