%h1.display-4
  = customer.username
  = link_to t('internal.actions.impersonate'),
            impersonate_customer_path(customer),
            target: :blank,
            class: 'btn btn-dark btn-sm'
%span.badge.badge-primary.mb-1.account-type= customer.account_kind.capitalize
- customer.system_labels.each do |label|
  %span.badge.badge-success.mb-1= label.decorated_name
- customer.labels.each do |label|
  %span.badge.badge-dark.mb-1= label.decorated_name
