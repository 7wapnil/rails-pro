= card class: 'mb-4', header: t(:global_customer_betting_limit) do
  = render 'customers/limit_form', limit: @customer_limits.select { |el| el[:title].nil? }.first[:limit]

= card class: 'mb-4', header: t(:customer_betting_limits_by_sport) do
  .accordion(id='limitsBySportAccordion')
    - @customer_limits.each do |data|
      - if data[:title]
        .card-header(id="headingSport#{data[:title].id}")
          %h5.mb-0
            %button.btn.btn-link{data: { toggle: 'collapse', target: "#collapseSport#{data[:title].id}" }}= data[:title].name
            - if data[:limit].id
              %span.badge.badge-pill.badge-success Setted
        .collapse{id: "collapseSport#{data[:title].id}", data: { parent: '#limitsBySportAccordion' } }
          .card-body
            = render 'customers/limit_form', limit: data[:limit]
