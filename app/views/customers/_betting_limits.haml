= card class: 'mb-4', header: t('entities.betting_limits.global', count: 1) do
  = render 'customers/betting_limit_form', limit: @customer_limits.select { |el| el[:title].nil? }.first[:limit]

= card class: 'mb-4', header: t('entities.betting_limits.by_sport.other') do
  .accordion(id='limitsBySportAccordion')
    - @customer_limits.each do |data|
      - if data[:title]
        .card-header(id="headingSport#{data[:title].id}")
          %h5.mb-0
            %button.btn.btn-link{data: { toggle: 'collapse', target: "#collapseSport#{data[:title].id}" }}= data[:title].name
            - if data[:limit].id
              %span.badge.badge-pill.badge-success= t('attributes.setted')
        .collapse{id: "collapseSport#{data[:title].id}", data: { parent: '#limitsBySportAccordion' } }
          .card-body
            = render 'customers/betting_limit_form', limit: data[:limit]
