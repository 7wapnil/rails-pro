= card class: "customer-note-form #{is_widget ? 'widget mb-4' : 'mt-4'}" do
  = simple_form_for note, html: { class: is_widget ? 'widget' : '' } do |f|
    - unless is_widget
      %legend= t('internal.add_instance', instance: t('internal.entities.customer_note'))
    = f.input :customer_id, as: :hidden
    = f.input :content
    = f.submit t('internal.add'), class: 'btn btn-outline-dark'
