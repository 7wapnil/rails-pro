- content_for :js do
  = javascript_pack_tag 'customers/navigation_links'

- content_for :navigation_content do
  %small.updated_at= stats.updated_at(human: true)
  %small= link_to 'Refresh', force: true

- content_for :page_content do
  .mt-4
    .row
      .col-md-6.mb-3
        = render 'deposit_and_withdrawal', stats: stats
        = render 'bonus', stats: stats
        = render 'profit_and_revenue', stats: stats

      .col-md-6.mb-3
        = render 'sports_betting', stats: stats
    .row
      .col-md-12.mb-3
        = render 'casino_performance', stats: stats
= render 'customers/base_template', customer: @customer
