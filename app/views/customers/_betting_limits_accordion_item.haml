.card-header{ id: "heading_sport#{title.id}" }
  %h5.mb-0
    %button.btn.btn-link{ data: { toggle: 'collapse',
                                  target: "#collapse_sport#{title.id}" } }= title.name
    - if limit.id
      %span.badge.badge-pill.badge-success= t('attributes.set')
.collapse{ id: "collapse_sport#{title.id}",
           data: { parent: '#limits-accordion' } }
  .card-body
    = render 'customers/betting_limit_form',
             title_id: title.id,
             limit: limit
