- content_for :page_content do
  .mt-4= render 'customers/account_information', customer: @customer, labels: @labels
  .mt-4= render 'customers/account_lock', customer: @customer
  .mt-4= render 'customers/personal_information', customer: @customer
  .mt-4= render 'customers/contact_information', customer: @customer
  .mt-4.mb-4= render 'customers/reset_password', customer: @customer

- content_for :css do
  = stylesheet_pack_tag 'labels_selector'

- content_for :js do
  = javascript_pack_tag 'simple_labels_selector'
  = javascript_pack_tag 'customers/navigation_links'

= render 'customers/base_template', customer: @customer, note: @note,
  customer_notes_widget: @customer_notes_widget
