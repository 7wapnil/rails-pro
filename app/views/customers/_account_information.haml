= card_form_for id: 'account_update_form',
                header: t('internal.attributes.account_information'),
                url: account_update_customer_path,
                html: { id: 'account_update_form', method: :patch },
                resource: customer,
                class: 'account-information' do
  %table.table
    %tr
      %td= t('internal.attributes.username')
      %td= customer.username
    %tr
      %td= t('internal.attributes.account_kind')
      %td.form-group.row
        .col-6= select_tag 'customer[account_kind]',
                            allowed_account_kind_options(customer),
                            class: 'form-control'
    %tr
      %td= t('internal.attributes.b_tag')
      %td= customer.b_tag
    %tr
      %td= t('internal.attributes.last_sign_in_ip')
      %td= customer.last_sign_in_ip
    %tr
      %td= t('internal.attributes.last_sign_in_at')
      %td= customer.last_sign_in_at.present? ? l(customer.current_sign_in_at) : '-'
    %tr
      %td= t('internal.attributes.sign_in_count')
      %td= customer.sign_in_count
    %tr
      %td= t('internal.attributes.last_visit_ip')
      %td= customer.last_visit_ip
    %tr
      %td= t('internal.attributes.last_visit_at')
      %td= customer.last_visit_at.present? ? l(customer.last_visit_at) : '-'
    %tr
      %td= t('internal.attributes.last_activity_at')
      %td= customer.last_activity_at.present? ? l(customer.last_activity_at) : '-'
    %tr
      %td= t('internal.attributes.visit_count')
      %td= customer.visit_count
    %tr
      %td= t('internal.attributes.email_verified')
      = hidden_field_tag 'customer[email_verified]', false
      %td= check_box_tag 'customer[email_verified]', nil,
                          customer.email_verified
    %tr
      %td= t('internal.attributes.verification_sent')
      = hidden_field_tag 'customer[verification_sent]', false
      %td= check_box_tag 'customer[verification_sent]', nil,
                          customer.verification_sent
    %tr
      %td= t('internal.attributes.promotional')
      = hidden_field_tag 'customer[agreed_with_promotional]', false
      %td= check_box_tag 'customer[agreed_with_promotional]', nil,
                          customer.agreed_with_promotional
    %tr
      %td= t('internal.entities.labels')
      %td
        = simple_labels_selector(customer.object, labels) # decorated customer
