= card header: t('attributes.personal_information'), class: 'personal-information' do
  = simple_form_for customer, html: { class: 'personal-information-form' },
                    url: update_personal_information_customer_path do |f|
    %table.table.vertical-with-labels
      %tr
        %td= t('attributes.first_name')
        %td
          = f.input :first_name,
                    label: false,
                    required: true,
                    input_html: { data: { only_letters: true } }
      %tr
        %td= t('attributes.last_name')
        %td
          = f.input :last_name,
                    label: false,
                    required: true,
                    input_html: { data: { only_letters: true } }
      %tr
        %td= t('attributes.gender')
        %td
          = build_enum_radio_group(resource: customer,
                                   attribute_name: :gender,
                                   collection: Customer.genders,
                                   translation_key: :genders)
      %tr
        %td= t('attributes.date_of_birth')
        %td
          .input-group
            = f.input_field :date_of_birth,
                            as: :date_picker,
                            label: false,
                            value: l(customer.date_of_birth, format: :date_picker),
                            data: { max_date: restricted_dob },
                            required: true
            .input-group-append
              .input-group-text.btn &#128197;
      %tr
        %td.text-right{ colspan: 2 }
          = f.submit t(:save), class: 'btn btn-outline-dark'

- content_for :js do
  = javascript_pack_tag 'input_validation', 'data-turbolinks-track': 'reload'
