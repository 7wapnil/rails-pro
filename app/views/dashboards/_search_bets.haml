= card header: t('internal.search', subject: t('internal.entities.bets')), class: 'bets mb-4' do
  = render 'bets/search',
          filter: filter,
          search_path: dashboard_path,
          excluded_columns: BetsFilter::EXCLUDED_COLUMNS[:bets]
  .table-responsive
    = render 'bets/table',
              filter: filter,
              excluded_columns: BetsFilter::EXCLUDED_COLUMNS[:bets]
  = paginate filter.bets, param_name: :bets_page
