%h1.display-4
  = t('internal.entities.activities')

%table.table.activities
  %thead
    %tr
      %th= t('internal.attributes.created_at')
      %th= t('internal.attributes.action')
  %tbody
    - @activities.each do |activity|
      %tr{ id: "activity-#{activity.id}" }
        %td= link_to l(activity.created_at, format: :long),
                      activity_path(activity)
        %td= t("internal.events.#{activity.event}", activity.interpolation)

= paginate @activities
