%table.table
  %thead
    %tr
      %th{ colspan: 2 }= kind
  %tbody.sortable{ data: { kind: kind } }
    - titles.each do |title|
      %tr{ data: { id: title.id } }
        %td= link_to title.name,
                      edit_title_path(title)
        %td= link_to t('entities.event_scopes'),
                      event_scopes_path(title_id: title.id)
