.row.mt-4
  .col-8.offset-2
    = card header: t('internal.every_matrix.categories.edit.title'), class: 'mb-3' do
      = simple_form_for @category do |f|
        = f.input :context, label: t('internal.every_matrix.categories.edit.context')
        = f.input :meta_title,
                  as: :text,
                  rows: 2,
                  label: t('internal.attributes.meta_title'),
                  class: 'form-control'
        = f.input :meta_description,
                  as: :text,
                  rows: 4,
                  label: t('internal.attributes.meta_description'),
                  class: 'form-control'
        = f.input :label
        = f.input :position
        = f.input :kind, collection: EveryMatrix::Category.kinds
        = f.submit 'Save', class: 'btn btn-success'
