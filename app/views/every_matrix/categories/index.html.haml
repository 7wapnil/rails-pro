%table.table.entities
  %thead
    %tr
      %th ID
      %th= t('internal.every_matrix.categories.index.context')
      %th Label
      %th Position
      %th Kind
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.id, edit_every_matrix_category_path(category)
        %td= category.context
        %td= category.label
        %td= category.position
        %td= category.kind

