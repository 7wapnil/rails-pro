- if filter.summaries.any?
  %table.table
    - Customers::Summary::REPORT_FIELDS.each do |report_field|
      %tr
        %td
          %b= t("dashboard_report.#{report_field}")
        %td
          - if report_field.end_with?('_amount')
            = number_to_currency(filter.summaries.send(report_field.to_sym))
          - else
            = filter.summaries.send(report_field.to_sym)
- else
  %tr
    %td
      %b= t('internal.dashboard_report.no_data_for_date_range')
