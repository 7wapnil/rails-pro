!!!
%html
  %head
    %meta{ charset: 'utf-8'}
    %meta{ content: 'width=device-width, initial-scale=1, shrink-to-fit=no', name: 'viewport' }
    %title= t('global.title')
    = csrf_meta_tag
    = stylesheet_pack_tag 'css/application', media: 'all', 'data-turbolinks-track': 'reload'
    = yield :css
    = javascript_pack_tag 'js/application', 'data-turbolinks-track': 'reload'
    = yield :js
  %body{ data: { controller: controller_name, action: action_name } }
    = render 'shared/navbar'
    .container
      = render 'shared/alerts'
      = yield
