%ul.navbar-nav.ml-auto
  - if customer_signed_in?
    %li.nav-item.dropdown
      %a#username-dropdown{ role: :button,
                            class: 'nav-link dropdown-toggle',
                            'data-toggle': 'dropdown',
                            'aria-haspopup': true,
                            'aria-expanded': false }
        = current_customer.username
      .dropdown-menu{ 'aria-labelledby': 'username-dropdown' }
        = link_to t(:sign_out),
                  destroy_customer_session_path,
                  method: :delete,
                  class: 'dropdown-item'
  - else
    %li.nav-item= link_to 'Sign in', new_customer_session_path, class: 'nav-link'
    %li.nav-item= link_to 'Sign up', new_customer_registration_path, class: 'nav-link'

