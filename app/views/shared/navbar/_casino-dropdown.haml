%li.nav-item.dropdown
  = link_to t(:casino), '#',
            class: 'nav-link dropdown-toggle',
            'data-toggle': 'dropdown',
            aria: { haspopup: true, expanded: false }

  .dropdown-menu
    = link_to t('entities.categories'),
              every_matrix_categories_path,
              class: 'nav-link'

    = link_to t('entities.transactions'),
              every_matrix_transactions_path,
              class: 'nav-link'

    = link_to t('entities.content_providers'),
              every_matrix_content_providers_path,
              class: 'nav-link'

    = link_to t('entities.vendors'),
              every_matrix_vendors_path,
              class: 'nav-link'
