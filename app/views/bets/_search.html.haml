- content_for :css do
  = stylesheet_pack_tag 'flatpickr', media: :all,
                        'data-turbolinks-track': 'reload'

- content_for :js do
  = javascript_pack_tag 'flatpickr', 'data-turbolinks-track': 'reload'

= search_form_for filter.search, url: search_path, as: :bets do |f|
  %table.table
    %thead
      %tr
        %th
          .filter_title
            #{t('attributes.bet_id')}:
          .filter_field
            = f.label :id_eq, class: 'sr-only'
            = f.search_field :id_eq,
                              class: 'form-control',
                              placeholder: t('attributes.bet_id'),
                              autocomplete: :off
        - unless local_assigns[:excluded_columns]&.include?(:customer)
          %th
            .filter_title
              #{t('attributes.customer')}:
            .filter_field
              = f.label :customer_username_cont, class: 'sr-only'
              = f.search_field :customer_username_cont,
                                class: 'form-control',
                                placeholder: t(:search, subject: t('attributes.customer')),
                                autocomplete: :off
        %th
          .filter_title
            #{t(:search, subject: t('from'))}:
          .filter_field
            = f.label :created_at_gteq, class: 'sr-only'
            = f.search_field :created_at_gteq,
                              class: 'form-control form_date',
                              placeholder: t(:search, subject: t('from')),
                              value: search_date_for(:created_at_gteq, :bets)
        %th
          .filter_title
            #{t(:search, subject: t('to'))}:
          .filter_field
            = f.label :created_at_lteq, class: 'sr-only'
            = f.search_field :created_at_lteq,
                              class: 'form-control form_date',
                              placeholder: t(:search, subject: t('to')),
                              value: search_date_for(:created_at_lteq, :bets)
      %tr
        %th
          .filter_title
            #{t('attributes.sport')}:
          .filter_field
            = f.label :title_name_eq, class: 'sr-only'
            = f.select :title_name_eq,
                        options_for_select(filter.sports, query_params[:title_name_eq]),
                        { include_blank: true },
                        class: 'form-control'

        %th
          .filter_title
            #{t('attributes.tournament')}:
          .filter_field
            = f.label :tournaments_name_eq, class: 'sr-only'
            = f.select :tournaments_name_eq,
                        options_for_select(filter.tournaments, query_params[:tournaments_name_eq]),
                        { include_blank: true },
                        class: 'form-control'
        %th
          .filter_title
            #{t('attributes.category')}:
          .filter_field
            = f.label :categories_name_in, class: 'sr-only'
            = f.select :categories_name_in,
                        options_for_select(filter.categories, query_params[:categories_name_in]),
                        { include_blank: true },
                        multiple: true, size: 1,
                        class: 'form-control multi-select'

        %th
          = f.submit class: 'btn btn-outline-dark btn-block'
