= card header: t(:add_entry_request), class: 'customer-entry-request' do
  .customer-entry-request-form
    = simple_form_for @entry_request_payload,
                      method: :post,
                      url: backoffice_entry_requests_path do |f|
      = f.input :customer_id, as: :hidden
      .row
        .col
          = f.input :kind,
                    collection: EntryKinds::FUND_KINDS,
                    include_blank: false,
                    label_method: ->(k) { t("kinds.#{k.first}") },
                    value_method: ->(k) { k.first }
      .row
        .col-6
          = f.input :amount, as: :decimal
        .col-6
          = f.input :currency_code,
            collection: Currency.all,
            value_method: :code,
            include_blank: false
      .row
        .col
          = f.input :comment, as: :text
      = f.submit t(:add), class: 'btn btn-outline-dark'
