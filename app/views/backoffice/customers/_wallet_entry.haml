= card header: t(:add_entry_request), class: 'customer-entry-request' do
  .customer-entry-request-form
    = simple_form_for @entry_request_payload, method: :post, url: backoffice_entry_requests_path do |f|
      = f.input :customer_id, as: :hidden
      = f.input :currency_code, collection: Currency.all, value_method: :code, include_blank: false
      = f.input :kind, collection: EntryKinds::KINDS,
                       include_blank: false,
                       label_method: ->(k) { t("kinds.#{k.first}") },
                       value_method: ->(k) { k.first }
      = f.input :amount
      = f.submit t(:add), class: 'btn btn-outline-dark'
