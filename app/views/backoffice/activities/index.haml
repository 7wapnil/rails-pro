%h1.display-4
  = t(:activities)

%table.table
  %thead
    %tr
      %th= t(:created_at)
      %th= t(:action)
  %tbody
    - @activities.each do |activity|
      %tr{ id: "activity-#{activity.id}" }
        %td= link_to l(activity.created_at, format: :long), backoffice_activity_path(activity)
        %td= @formatter.format_action(activity)

= paginate @activities
